{
  "service": {
    "name": "template-kaskadi-api"
  },
  "package": {
    "individually": true,
    "exclude": [
      "**/**"
    ]
  },
  "plugins": [
    "serverless-aws-documentation"
  ],
  "custom": {
    "documentation": {
      "api": {
        "info": {
          "version": "1.0.0",
          "title": "${self:service.name}",
          "description": "Template API"
        }
      }
    }
  },
  "provider": {
    "name": "aws",
    "runtime": "nodejs12.x",
    "stackName": "${self:service.name}-stack",
    "apiName": "${self:service.name}",
    "stage": "${opt:stage, 'prod'}",
    "region": "eu-central-1",
    "deploymentBucket": {
      "name": "kaskadi-serverless-deployment-bucket"
    }
  },
  "functions": {
    "HelloWorld": "${file(./lambdas/hello-world/serverless.json)}"
  },
  "layers": {
    "MyLayer": "${file(./layers/my-layer/serverless.json)}"
  }
}
